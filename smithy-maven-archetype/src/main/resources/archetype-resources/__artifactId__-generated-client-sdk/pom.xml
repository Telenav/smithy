<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    #set ($nameCaps = $artifactId.substring(0, 1).toUpperCase() + $artifactId.substring(1))

    <parent>
        <groupId>\${groupId}</groupId>
        <artifactId>\${artifactId}-parent</artifactId>
        <version>\${version}</version>
    </parent>

    <artifactId>\${artifactId}-generated-client-sdk</artifactId>
    <name>\${nameCaps} Generated Client SDK</name>

    <description>
        A generated HTTP Client SDK library for programmatically calling
        a \${nameCaps} service server - no user editable code in this project.
    </description>

    <dependencies>
        <dependency>
            <groupId>\${project.groupId}</groupId>
            <artifactId>\${artifactId}-model</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>smithy-client-base</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <!-- Generates a Revision.java source file which can be used
                at runtime to get the server artifactId / groupId / version
                and the git commit hash and date -->
                <groupId>com.mastfrog</groupId>
                <artifactId>revision-info-plugin</artifactId>
                <configuration>
                    <auto>true</auto>
                    <genClass>\${groupId}.\${artifactId}.Revision</genClass>
                    <genSourcesDir>\${basedir}/src/main/java</genSourcesDir>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <!-- POM originally generated by the ${project.groupId}:${project.artifactId} Maven Plugin
    version ${project.version}. -->
</project>
